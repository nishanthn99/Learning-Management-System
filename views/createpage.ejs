<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Course</title>
</head>

<body>
    <%- include('header') %>
    <form action="/<%= courseId %>/newpage" method="post">
      <input type="hidden" name="_csrf" value="<%=_csrf%>" />
      <div class="col-5">
        <label class="form-label fs-5 fw-medium">Select Chapter</label>
        <select name="ChapterID" class="form-select">
          <% for (c of chapter) { %>
          <option value="<%= c.id %>" class="fs-6 fw-medium">
            <%= c.chaptertitle %>
          </option>
          <% } %>
        </select>
      </div>
      <div class="mt-2">
        <label for="PageName" class="form-label fs-5 fw-medium"
          >Give Title to Page</label
        >
        <input
          type="text"
          name="PageName"
          placeholder="Enter Page Title"
          class="form-control"
        />
      </div>
      <div class="mt-3">
        <label for="Content" class="form-label fs-5 fw-medium">
          Add Content to Page</label
        >
        <div id="editor" style="height: 300px" class="fs-6"></div>
        <input type="hidden" id="editorInput" name="Content" />
      </div>
      <div class="mb-6 mt-2 mb-3">
        <button class="btn btn-primary">Add Page</button>
      </div>
    </form>
  </div>
</div>
    <%- include('footer') %>
</body>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="/js/script.js"></script>
</html>