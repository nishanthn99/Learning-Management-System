<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Course</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body class="flex flex-col min-h-screen bg-gray-100">
    <%- include('header') %>
    
    <div class="container mx-auto p-4 flex-1">
        <h4 class="rounded bg-red-500 text-white p-3 text-lg font-bold mb-4">My Courses</h4>
        
        <table class="w-full table-auto border border-gray-300 bg-white rounded-lg shadow-md overflow-x-auto">
          <thead class="bg-gray-200">
            <tr>
              <th class="border px-4 py-2 text-left">Sl. No</th>
              <th class="border px-4 py-2 text-left">Course Name</th>
              <th class="border px-4 py-2 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% myCourses.forEach((course, index) => { %>
            <tr class="even:bg-gray-50">
              <td class="border px-4 py-2 text-center"><%= index + 1 %></td>
              <td class="border px-4 py-2"><%= course.coursetitle %></td>
              <td class="border px-4 py-2 text-center">
                <a
                  href="/course/<%=course.id%>/chapter"
                  class="bg-green-500 hover:bg-green-600 text-white font-semibold py-1 px-3 rounded transition duration-300"
                >
                  View Course
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
    </div>
    
    <%- include('footer') %>    
</body>
</html>
