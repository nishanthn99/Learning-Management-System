<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Course</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body>
    <%- include('header') %>
    <div class="grid grid-cols-8 gap-4">
        <h4 class="rounded bg-red-500 text-white p-2 col-span-8">My Courses</h4>
        
        <table class="mt-3 col-span-8 w-full table-auto border border-gray-300">
          <thead>
            <tr class="bg-gray-200">
              <th class="border px-4 py-2">Sl.no</th>
              <th class="border px-4 py-2">Course Name</th>
              <th class="border px-4 py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% myCourses.forEach((course, index) => { %>
            <tr class="bg-white even:bg-gray-50">
              <td class="border px-4 py-2 text-center"><%= index + 1 %></td>
              <td class="border px-4 py-2"><%= course.coursetitle%></td>
              <td class="border px-4 py-2 text-center">
                <a
                  href="/course/<%=course.id%>/chapter"
                  class="bg-green-500 hover:bg-green-600 text-white font-semibold py-1 px-3 rounded"
                  >View Course</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>  
      <%-include('footer') %>    
</body>
</html>